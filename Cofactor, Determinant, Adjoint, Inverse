import numpy as np

r = int(input("Rows: "))
A = []

for i in range(r):
    A.append(list(map(float, input().split())))

A = np.array(A)
print("Matrix:\n", A)

det = np.linalg.det(A)
print("Determinant =", det)

if det != 0:
    adj = np.linalg.inv(A).T * det
    inv = np.linalg.inv(A)
    print("Adjoint:\n", adj)
    print("Inverse:\n", inv)
else:
    print("Inverse does not exist.")
